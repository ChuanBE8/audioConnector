{
    "compilerOptions": {
      "typeRoots": [
        "node_modules/@types"
      ],
      "outDir": "./dist",
      "sourceMap": true,
  
      "lib": ["ES2021"],
      "module": "commonjs",
      "target": "ES2021",
  
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }